{
    "version": 2,
    "name": "myonlinestore/bricks",
    "build": {
        "env": {
            "NPM_TOKEN": "@npm_token",
            "BUILDING_FOR_NOW": "true"
        }   
    },
    "github": {
        "silent": true
    },
    "builds": [
        { "src": "packages/components/package.json", "use": "@now/static-build" }
    ],
    "routes": [
        { "src": "/bricks/components/(.*)", "dest": "/packages/components/$1", "continue": true },
        { "src": "/(((?!\\?|#|\\.|_next).)*((?!\\?|/|#|\\.).))", "status": 301, "headers": { "Location": "/$1/" } }
    ]
}
