{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "lib",
    "sourceMap": true,
    "outDir": "lib/src",
    "noImplicitAny": true,
    "noErrorTruncation": true,
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
