{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "outDir": "dist/src",
    "noImplicitAny": true,
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "jsx": "react",
    "allowJs": false,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
